<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Product Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#F8F8F8" />

        </androidx.cardview.widget.CardView>

        <!-- Product Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Product Title -->
            <TextView
                android:id="@+id/productTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Premium Wireless Bluetooth Headphones"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#0F1111"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="6dp"
                android:lineSpacingExtra="2dp" />

            <!-- Brand -->
            <TextView
                android:id="@+id/brandTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Premium Brand"
                android:textSize="12sp"
                android:textColor="#565959"
                android:layout_marginBottom="6dp" />

            <!-- Rating and Reviews -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <RatingBar
                    android:id="@+id/productRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:rating="4.5"
                    android:stepSize="0.1"
                    android:isIndicator="true"
                    android:progressTint="#FF9900" />

                <TextView
                    android:id="@+id/reviewCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(2,145)"
                    android:textSize="11sp"
                    android:textColor="#007185"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Price Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/currencySymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textSize="12sp"
                    android:textColor="#B12704"
                    android:layout_gravity="top"
                    android:layout_marginTop="1dp" />

                <TextView
                    android:id="@+id/priceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#B12704" />

                <TextView
                    android:id="@+id/priceDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99"
                    android:textSize="12sp"
                    android:textColor="#B12704"
                    android:layout_gravity="top"
                    android:layout_marginTop="1dp" />

                <TextView
                    android:id="@+id/originalPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$129.99"
                    android:textSize="12sp"
                    android:textColor="#565959"
                    android:layout_marginStart="6dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Shipping Info -->
            <TextView
                android:id="@+id/shippingInfoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FREE delivery tomorrow"
                android:textSize="11sp"
                android:textColor="#007185"
                android:layout_marginBottom="10dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/addToCartButton"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="Add to Cart"
                    android:textSize="11sp"
                    android:textColor="#0F1111"
                    android:backgroundTint="#FFD814"
                    android:layout_marginEnd="6dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/favoriteIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/btn_star_big_off"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:layout_marginEnd="2dp" />

                <ImageView
                    android:id="@+id/shareIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_share"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
